@model BindDDLWithDatabase.Models.StudentModel
@{
    ViewData["Title"] = "Home Page";
}


<form asp-controller="Home" asp-action="Index" method="post">
    <label>Select Student Name</label>
	@Html.DropDownListFor(m => m.Id, new SelectList(Model.StudentList, "Value", "Text"), 
    new { @class = "form-control" }) 
    
    
    <br />
    <input type="submit" value="Submit" class="btn btn-success" />
</form>
<br />
@{
    if (ViewBag.record != null)
    {
        <div class="alert alert-success" role="alert">
            <h2 class="alert-heading">Selected Name : @ViewBag.record</h2>

        </div>
    }
    
    
}